---
const contacts = [
  {
    name:  "Milan Kosař",
    role:  "Šerif osady",
    phone: "+420 777 228 818",
    email: "mailday@seznam.cz",
    photo: "/images/contact-milan.png",
  },
  {
    name:  "David Trávníček",
    role:  "Zelenáč osady",
    phone: "+420 777 228 818",
    email: "mailday@seznam.cz",
    photo: "/images/contact-david.png",
  },
];
---

<section id="kontakty" class="bg-brand-beige rounded-[128px] flex flex-col gap-20 items-center justify-center overflow-hidden px-48 py-32">

  <h2 class="font-oi font-normal text-[64px] leading-[1.3] tracking-[1.28px] text-brand-contact-dark text-center m-0 w-full">
    Kontakty
  </h2>

  <div class="flex flex-col gap-20 w-full">
    {contacts.map((c) => (
      <div class="bg-white rounded-[64px] h-[320px] overflow-hidden relative shadow-[0px_8px_0px_0px_rgba(0,0,0,0.25)] flex items-center pl-[368px] pr-16 gap-8">

        <!-- Portrait -->
        <div class="absolute left-0 top-0 w-[320px] h-[320px] rounded-[64px] overflow-hidden shrink-0">
          <img src={c.photo} alt={c.name} class="w-full h-full object-cover" />
        </div>

        <!-- Info -->
        <div class="flex flex-col gap-5 w-full">
          <div>
            <p class="font-hepta font-semibold text-[40px] text-black m-0 leading-[normal]">{c.name}</p>
            <p class="font-inter font-normal text-2xl text-black uppercase m-0 leading-[normal]">{c.role}</p>
          </div>
          <div class="flex flex-col gap-1">
            <p class="font-inter font-normal text-2xl text-black m-0 leading-[normal]">mobilní telegraf:</p>
            <p class="font-inter font-semibold text-2xl text-black m-0 leading-[normal]">{c.phone}</p>
          </div>
          <div class="flex flex-col gap-1">
            <p class="font-inter font-normal text-2xl text-black m-0 leading-[normal]">elektronický pony express:</p>
            <p class="font-inter font-semibold text-2xl text-black m-0 leading-[normal]">{c.email}</p>
          </div>
        </div>

      </div>
    ))}
  </div>

</section>
