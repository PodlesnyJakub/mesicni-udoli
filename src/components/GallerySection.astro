---
type GalleryEntry = { title: string; month: string; image: string };
const galleryFiles = import.meta.glob('/content/galleries/*/index.json', { eager: true, import: 'default' });
const galleries = Object.values(galleryFiles) as GalleryEntry[];
---

<section id="galerie" class="bg-brand-beige rounded-[128px] flex flex-col gap-20 items-center justify-center overflow-hidden px-64 py-32">

  <h2 class="font-oi font-normal text-[64px] leading-[1.3] tracking-[1.28px] text-brand-dark-beige text-center m-0 w-full">
    Fotogalerie
  </h2>

  <!-- Grid -->
  <div class="flex flex-wrap gap-8 w-[1312px]">
    {galleries.map((g) => (
      <div class="bg-white rounded-[32px] w-[416px] h-[320px] flex flex-col overflow-hidden shadow-[0px_8px_0px_0px_rgba(0,0,0,0.25)] shrink-0 pb-6 gap-6">
        <div class="flex-1 min-h-0 rounded-[32px] overflow-hidden relative">
          <img
            src={g.image}
            alt={g.title}
            class="absolute inset-0 w-full h-full object-cover rounded-[32px] grayscale hover:grayscale-50 transition-all duration-300"
          />
        </div>
        <div class="flex items-center justify-between px-6 text-2xl text-black shrink-0">
          <span class="font-hepta font-bold">{g.title}</span>
          <span class="font-inter font-normal">{g.month}</span>
        </div>
      </div>
    ))}
  </div>

  <button class="inline-flex items-center justify-center h-16 px-2 w-64 rounded-2xl font-inter font-semibold text-base tracking-[1.6px] uppercase text-white bg-brand-red border-none cursor-pointer">
    Načíst Další galerie
  </button>

</section>
