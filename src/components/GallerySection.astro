---
const galleries = [
  { title: "Nohejbal",      month: "9/2024" },
  { title: "Volejbal ženy", month: "9/2024" },
  { title: "Potlach 2024",  month: "7/2024" },
  { title: "Volejbal 4+2",  month: "6/2024" },
  { title: "Dětský den",    month: "5/2024" },
  { title: "Gallery Title", month: "6/2024" },
  { title: "Gallery Title", month: "6/2024" },
  { title: "Gallery Title", month: "6/2024" },
  { title: "Gallery Title", month: "6/2024" },
];
---

<section id="galerie" class="bg-brand-beige rounded-[128px] flex flex-col gap-20 items-center justify-center overflow-hidden px-64 py-32">

  <h2 class="font-oi font-normal text-[64px] leading-[1.3] tracking-[1.28px] text-brand-dark-beige text-center m-0 w-full">
    Fotogalerie
  </h2>

  <!-- Grid -->
  <div class="flex flex-wrap gap-8 w-[1312px]">
    {galleries.map((g) => (
      <div class="bg-white rounded-[32px] w-[416px] h-[320px] flex flex-col overflow-hidden shadow-[0px_8px_0px_0px_rgba(0,0,0,0.25)] shrink-0 pb-8 gap-6">
        <div class="flex-1 min-h-0 rounded-[32px] overflow-hidden relative">
          <img
            src="/images/gallery.png"
            alt={g.title}
            class="absolute inset-0 w-full h-full object-cover rounded-[32px]"
          />
        </div>
        <div class="flex items-center justify-between px-6 text-2xl text-black shrink-0">
          <span class="font-hepta font-bold">{g.title}</span>
          <span class="font-inter font-normal">{g.month}</span>
        </div>
      </div>
    ))}
  </div>

  <button class="inline-flex items-center justify-center h-16 px-8 w-64 rounded-2xl font-inter font-semibold text-base tracking-[1.6px] uppercase text-white bg-brand-red border-none cursor-pointer">
    Načíst Další galerie
  </button>

</section>
