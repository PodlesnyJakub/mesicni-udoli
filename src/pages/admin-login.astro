---
export const prerender = false;

let error = false;

if (Astro.request.method === 'POST') {
  const data = await Astro.request.formData();
  const password = data.get('password') as string;
  const next = (data.get('next') as string) ?? '/admin';

  if (password && password === import.meta.env.ADMIN_PASSWORD) {
    Astro.cookies.set('admin-auth', 'true', {
      path: '/',
      httpOnly: true,
      sameSite: 'lax',
      secure: import.meta.env.PROD,
      maxAge: 365 * 24 * 60 * 60,
    });
    return Astro.redirect(next);
  }

  error = true;
}

const next = Astro.url.searchParams.get('next') ?? '/admin';
---

<!doctype html>
<html lang="cs">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Přihlášení – Měsíční Údolí</title>
    <style>
      *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
      body {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #574d38;
        font-family: system-ui, sans-serif;
      }
      .card {
        background: #383124;
        border-radius: 32px;
        padding: 48px;
        width: 100%;
        max-width: 420px;
        display: flex;
        flex-direction: column;
        gap: 32px;
      }
      .logo {
        text-align: center;
        color: #fca031;
        font-size: 24px;
        font-weight: bold;
        letter-spacing: 1px;
        text-transform: uppercase;
      }
      .subtitle {
        text-align: center;
        color: #bfb39c;
        font-size: 14px;
        margin-top: -20px;
      }
      label {
        display: flex;
        flex-direction: column;
        gap: 8px;
        color: #e7e3da;
        font-size: 14px;
      }
      input[type="password"] {
        padding: 12px 16px;
        border-radius: 12px;
        border: 1px solid #574d38;
        background: #574d38;
        color: #e7e3da;
        font-size: 16px;
        outline: none;
        width: 100%;
      }
      input[type="password"]:focus {
        border-color: #fca031;
      }
      button {
        padding: 14px;
        border-radius: 12px;
        border: none;
        background: #bd3927;
        color: white;
        font-size: 14px;
        font-weight: 600;
        letter-spacing: 1.5px;
        text-transform: uppercase;
        cursor: pointer;
        width: 100%;
      }
      button:hover { background: #a5311f; }
      .error {
        color: #fca031;
        font-size: 14px;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <div class="card">
      <div>
        <p class="logo">Měsíční Údolí</p>
        <p class="subtitle">administrace</p>
      </div>
      <form method="POST" style="display:flex;flex-direction:column;gap:20px;">
        <input type="hidden" name="next" value={next} />
        <label>
          Heslo
          <input type="password" name="password" autofocus autocomplete="current-password" />
        </label>
        {error && <p class="error">Nesprávné heslo.</p>}
        <button type="submit">Přihlásit se</button>
      </form>
    </div>
  </body>
</html>
